{
  "name": "remark-pdf",
  "version": "0.1.0",
  "description": "remark plugin to compile markdown to pdf.",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.cjs",
      "default": "./lib/index.js"
    }
  },
  "imports": {
    "#buffer": {
      "node": "./lib/shim/buffer/node.js",
      "default": "./lib/shim/buffer/browser.js"
    },
    "#events": {
      "node": "./lib/shim/events/node.js",
      "default": "./lib/shim/events/browser.js"
    },
    "#fs": {
      "node": "./lib/shim/fs/node.js",
      "default": "./lib/shim/fs/browser.js"
    },
    "#stream": {
      "node": "./lib/shim/stream/node.js",
      "default": "./lib/shim/stream/browser.js"
    },
    "#zlib": {
      "node": "./lib/shim/zlib/node.js",
      "default": "./lib/shim/zlib/browser.js"
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "vitest run",
    "tsc": "tsc -p . --noEmit",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "typedoc": "typedoc",
    "prepublishOnly": "npm run typedoc && rimraf lib && npm run build"
  },
  "dependencies": {
    "@jsamr/counter-style": "^2.0.2",
    "buffer": "^6.0.3",
    "crypto-js": "^4.2.0",
    "deepmerge": "^4.3.1",
    "events": "^3.3.0",
    "fontkit": "^2.0.4",
    "image-size": "^2.0.2",
    "jpeg-exif": "^1.1.4",
    "linebreak": "^1.1.0",
    "mdast-util-definitions": "^6.0.0",
    "pako": "^2.1.0",
    "png-js": "^1.0.0",
    "readable-stream": "^4.7.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-typescript": "^12.0.0",
    "@storybook/react-vite": "10.1.11",
    "@types/deepmerge": "^2.1.0",
    "@types/file-saver": "^2.0.7",
    "@types/jest-image-snapshot": "^6.4.0",
    "@types/lodash.debounce": "^4.0.9",
    "@types/mdast": "^4.0.3",
    "@types/node": "^25.0.6",
    "@types/pdfkit": "^0.17.4",
    "@types/react": "^19.2.7",
    "@types/unist": "^3.0.0",
    "file-saver": "^2.0.5",
    "highlight.js": "^11.11.1",
    "jest-image-snapshot": "^6.5.1",
    "lodash.debounce": "^4.0.8",
    "pdf-to-img": "^5.0.0",
    "pdfjs-dist": "^5.4.296",
    "pdfkit": "0.17.2",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-is": "^19.2.1",
    "react-simple-code-editor": "^0.14.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "storybook": "10.1.11",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "unified": "^11.0.4",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inokawa/remark-pdf.git"
  },
  "keywords": [
    "unist",
    "remark",
    "mdast",
    "markdown",
    "pdf",
    "pandoc"
  ],
  "author": "inokawa <stratoooo-taster@yahoo.co.jp> (https://github.com/inokawa/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inokawa/remark-pdf/issues"
  },
  "homepage": "https://github.com/inokawa/remark-pdf#readme"
}
